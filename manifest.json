{
    "manifest_version": 2,
    
    "name": "Moodload BETA",
    "description": "Makes it possible to download all files from any course on Moodleâ„¢.",
    "version": "0.1",

    "icons":
    {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },

    "page_action":
    {
        "default_title": "Moodload BETA",

        "default_icon":
        {
            "19": "icon-action-19.png",
            "38": "icon-action-38.png"
        }
    },

    "background":
    {
        "scripts": [ "background.js" ],
        "persistent": false
    },

    "content_scripts":
    [{
        "matches": [ "http://*/*", "https://*/*" ],
        "js": [ "jquery-2.0.0.min.js", "moodload.js" ],
        "all_frames": true
    }]
}
