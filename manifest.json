{
    "manifest_version": 2,
    
    "name": "Moodload",
    "description": "Makes it possible to recursively download all files on any page generated by Moodleâ„¢.",
    "version": "0.1",

    "icons":
    {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },

    "browser_action":
    {
        "default_title": "Moodload",
        "default_icon":
        {
            "19": "icon-ba-active-19.png",
            "38": "icon-ba-active-38.png"
        }
    },

    "content_scripts":
    [{
        "matches": [ "<all_urls>" ],
        "js": [ "jquery-2.0.0.min.js", "moodload.js" ],
        "all_frames": true
    }]
}
